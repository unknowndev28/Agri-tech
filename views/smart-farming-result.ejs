<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Smart Farming Recommendation</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f9fafb;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 2rem 1rem;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    h1 {
      color: #2f855a;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    h2 {
      color: #276749;
      margin-bottom: 1rem;
    }
    ul {
      list-style-type: disc;
      margin-left: 1.5rem;
    }
    .section {
      margin-bottom: 1.5rem;
    }
    .profit {
      font-size: 1.3rem;
      font-weight: bold;
      color: #d69e2e; 
    }
    .error-box {
      padding: 1rem;
      background-color: #fed7d7;
      color: #9b2c2c;
      border-radius: 6px;
      font-weight: bold;
      text-align: center;
    }
    .back-link {
      display: block;
      margin-top: 2rem;
      text-align: center;
      font-weight: 600;
      color: #3182ce;
      text-decoration: none;
    }
    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üåæ Smart Farming Recommendation</h1>

    <% 
      let result;
      try {
        result = JSON.parse(responseText);
      } catch {
        result = { error: "Failed to parse AI result." };
      }
    %>

    <% if (result.error) { %>
      <div class="error-box">
        <p>‚ùå <%= result.error %></p>
      </div>
    <% } else { %>
      <h2>Recommended Plant: <%= result.plant %></h2>

      <div class="section">
        <h3>üå± Reasons</h3>
        <ul>
          <% result.reasons.forEach(reason => { %>
            <li><%= reason %></li>
          <% }) %>
        </ul>
      </div>

      <div class="section">
        <h3>üõ† Best Practices</h3>
        <ul>
          <% result.bestway.forEach(item => { %>
            <li><%= item %></li>
          <% }) %>
        </ul>
      </div>

      <div class="section profit">
        <h3>üí∞ Estimated Profit</h3>
        <p><%= result["estimated profit"] %></p>
      </div>
    <% } %>

    <a href="/smart-farming" class="back-link">‚Üê Back to form</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
