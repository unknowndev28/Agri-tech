        otherLanguageInput.classList.remove('d-none');
      } else {
        otherLanguageInput.classList.add('d-none');
        otherLanguageInput.value = '';
        localStorage.setItem('selectedLanguage', selectedCode);

        const langKey = languageMap[selectedCode] || 'english';
        updateLanguageText(langKey);
      }
    });

    window.addEventListener('DOMContentLoaded', () => {
      let savedCode = localStorage.getItem('selectedLanguage') || 'en';
      languageSelect.value = savedCode;

      if (savedCode === 'other') {
