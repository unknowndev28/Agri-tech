<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Analysis Results</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    body {
      background-color: #f8f9fa;
    }

    .results-container {
      max-width: 800px;
      margin: 50px auto;
      padding: 30px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .back-link {
      display: inline-block;
      margin-bottom: 20px;
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    h2 {
      color: #28a745;
      margin-bottom: 30px;
      text-align: center;
    }

    .result-image-container {
      text-align: center;
      margin-bottom: 30px;
    }

    .result-image-container img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .results-card {
      border: 1px solid #e9ecef;
      border-radius: 8px;
      padding: 25px;
      margin-top: 20px;
      background-color: #fefefe;
    }

    .results-card h3 {
      color: #343a40;
      margin-bottom: 15px;
    }

    .result-disease {
      font-size: 1.4rem;
      font-weight: bold;
      color: #dc3545;
    }

    ul {
      list-style-type: disc;
      padding-left: 20px;
      margin-bottom: 0;
    }

    ul li {
      margin-bottom: 8px;
      color: #495057;
    }
  </style>
</head>
<body>
  <div class="container results-container">
    <a href="/plant-disease-identify" class="back-link">&larr; Analyze another image</a>
    <h2>Diagnosis Complete!</h2>


    <% diseases.forEach(function(disease, index) { %>
      <div class="results-card">
        <h3 class="result-disease">Disease <%= diseases.length > 1 ? '#' + (index + 1) : '' %>: <%= disease.disease_name %></h3>

        <% if (disease.symptoms && disease.symptoms.length > 0) { %>
          <h4>Symptoms:</h4>
          <ul>
            <% disease.symptoms.forEach(function(symptom) { %>
              <li><%= symptom %></li>
            <% }); %>
          </ul>
        <% } %>

        <% if (disease.treatment && disease.treatment.length > 0) { %>
          <h4 class="mt-3">Recommended Treatment:</h4>
          <ul>
            <% disease.treatment.forEach(function(step) { %>
              <li><%= step %></li>
            <% }); %>
          </ul>
        <% } %>
      </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
